<header id="nav">

  <div id="nav-container" class="container p-y-2">

    <% if flash[:notice] %>
      <%= render partial: 'shared/flash', locals: { msg: flash[:notice] } %>
    <% end %>

    <% if logged_in? %>

      <% if current_user.root? %>
        <div class="text-muted pull-xs-right">
          <%= link_to current_company.name, companies_path %>
        </div>
      <% end %>

      <% if current_user.admin? %>
        <%= link_to "Company", company_path(current_company) %>
      <% end %>

      <%= link_to "Users", users_path %>

      <%= link_to "Updates", updates_path %>

      <% unless current_user.root? %>
        <%= link_to "Me", current_user %>
      <% end %>

    <% else %>

    <div class="pull-xs-right">
      <%= link_to "Sign up", new_signup_path %>
      <%= link_to "Login", new_session_path %>
    </div>

    <% end %>

  </div>

</header>
