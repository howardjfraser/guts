<header class="m-t-1">

  <% if flash[:notice] %>
    <%= content_tag(:div, flash[:notice], class: "flash") %>
  <% end %>

  <% if logged_in? %>

    <% if current_user.root? %>
      <%= link_to "Companies", companies_path, style: "padding-right: 1rem;" %>
    <% end %>

    <%= link_to "Users", users_path, style: "padding-right: 1rem;" %>
    <%= link_to "Me", current_user %>

    <div class="text-muted pull-xs-right">
      <%= current_user.company.name %>
    </div>

  <% else %>

    <%= link_to "Welcome", root_path, id: "logo", style: "padding-right: 1rem;" %>
    <%= link_to "Sign up", signup_path, style: "padding-right: 1rem;" %>
    <%= link_to "Log in", login_path %>

  <% end %>

</header>

<hr>
