<header class="m-t-1">

  <% if flash[:notice] %>
    <%= content_tag(:div, flash[:notice], class: "flash") %>
  <% end %>

  <% if logged_in? %>

    <% if current_user.root? %>
      <div class="text-muted pull-xs-right">
        <%= link_to current_user.company.name, companies_path %>
      </div>
    <% end %>

    <% if current_user.admin? %>
      <%= link_to "Company", company_path(current_user.company), style: "padding-right: 1rem;" %>
    <% end %>

    <%= link_to "Users", users_path, style: "padding-right: 1rem;" %>

    <% unless current_user.root? %>
      <%= link_to "Me", current_user %>
    <% end %>

  <% else %>

    <%= link_to "Sign up", signups_path, style: "padding-right: 1rem;" %>
    <%= link_to "Log in", login_path %>

  <% end %>

</header>

<hr>
