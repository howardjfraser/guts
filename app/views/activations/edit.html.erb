<h1>Activate account</h1>
<hr>

<%= form_for(@user, url: activation_path(params[:id])) do |f| %>
  <%= render 'shared/errors', object: @user %>

  <%= hidden_field_tag :email, @user.email %>

  <div class="row m-b-1">
    <div class="std-label text-sm-right">
      <%= f.label :password, "Choose password" %>
    </div>
    <div class="std-control">
      <%= f.password_field :password, autofocus: true %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="std-submit text-xs-right">
      <%= f.submit "Complete", class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
