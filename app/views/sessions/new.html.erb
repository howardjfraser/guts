<% provide(:title, "Login") %>

<h1>Login</h1>
<hr>

<%= form_for(:session, url: login_path) do |f| %>

  <div class="row m-b-1">
    <div class="std-label text-sm-right">
      <%= f.label :email %>
    </div>
    <div class="std-control">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="std-label text-sm-right">
      <%= f.label :password %>
    </div>
    <div class="std-control">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="std-checkbox-label text-sm-right">
      <%= f.label :remember_me do %>
        <span>Keep me logged in on this computer</span>
      <% end %>
    </div>
    <div class="std-checkbox text-xs-right">
      <%= f.check_box :remember_me %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="std-submit text-xs-right">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="std-submit text-xs-right">
      <%= link_to "Forgotten your password?", new_password_reset_path %>
    </div>
  </div>

<% end %>

