<hr>

<%= form_for(@user) do |f| %>

  <div class="row m-t-2 m-b-1">
    <div class="col-xs-12 col-sm-3 col-md-2 col-md-offset-2 text-sm-right">
      <%= f.label :name %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-5">
      <%= f.text_field :name, autofocus: true  %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="col-xs-12 col-sm-3 col-md-2 col-md-offset-2 text-sm-right">
      <%= f.label :email %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-5">
      <%= f.email_field :email %>
    </div>
  </div>

  <!-- TODO replace these with reset pw by email link once initial pw is set as part of activation -->

  <div class="row m-b-1">
    <div class="col-xs-12 col-sm-3 col-md-2 col-md-offset-2 text-sm-right">
      <%= f.label :password %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-5">
      <%= f.password_field :password, class: '' %>
    </div>
  </div>

  <div class="row m-b-1">
    <div class="col-xs-12 col-sm-3 col-md-2 col-md-offset-2 text-sm-right">
      <%= f.label :password_confirmation, "Confirm" %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-5">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <!-- <hr class="m-y-2"> -->

  <div class="row">
    <div class="col-xs-12 col-md-9 text-xs-right">
      <%= f.submit "#{@user.new_record? ? 'Send Invitation' : 'Save Changes'}", class: "btn btn-success m-t-1 " %>
    </div>
  </div>

<% end %>
