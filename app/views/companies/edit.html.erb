<%= provide :subtitle, 'Edit' %>
<%= provide :title, "#{@company.name}" %>

<%= form_for(@company) do |f| %>

  <div class="row m-b-1 <%= error_class @company, :name %>">
    <div class="std-label text-sm-right">
      <%= f.label :name, "Company name" %>
    </div>
    <div class="std-control">
      <%= f.text_field :name %>
      <%= custom_error_message @company, :name, 'Company name' %>
    </div>
  </div>

  <div class="row">
    <div class="std-submit text-xs-right">
      <%= f.submit "Update", class: "btn btn-success" %>
    </div>
  </div>

<% end %>
